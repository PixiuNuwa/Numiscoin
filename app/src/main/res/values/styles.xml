<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base de la aplicación -->
    <style name="Theme.Numiscoin3" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--item name="dialogCornerRadius">16dp</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NumisCoin.Small</item-->
    </style>

    <style name="ShapeAppearance.NumisCoin.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Tema sin ActionBar -->
    <style name="Theme.Numiscoin3.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--item name="dialogCornerRadius">16dp</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NumisCoin.Small</item-->
    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.DayNight">
        <!-- Habilita navegación transparente -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Importante para evitar problemas -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <!--item name="dialogCornerRadius">16dp</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NumisCoin.Small</item-->
    </style>

    <!-- Style for membership cards -->
    <style name="MembershipCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Style for primary button viejo -->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_green</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="SettingButtonStyle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Theme.Numiscoin.Register" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/button_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded_forced</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="cr20">
        <item name="cornerSize">20dp</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">8sp</item>
        <item name="fontFamily">@font/arial</item>
    </style>
    <style name="TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.Material3.DayNight">
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/button_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>