<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rxn69sxogwq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00272C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rwqg0yky9t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="126dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rvzls41j3g5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="71dp"
                    android:layout_marginStart="69dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/rowykuwjg1dd"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="19dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/r74lc57eeo75"
                        android:textColor="#FFF3D6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="REGISTRO"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rxqr439n1e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="71dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rtpm1quub61m"
                        android:layout_width="97dp"
                        android:layout_height="93dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rfek34f6zg58"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="42dp"
                    android:paddingHorizontal="27dp"
                    android:layout_marginBottom="71dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rbbyj40t7lml"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="39dp"
                        android:orientation="vertical">

                        <!-- Nombre -->
                        <EditText
                            android:id="@+id/nameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/btn_white_square"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp"
                            android:paddingVertical="11dp"
                            android:textColor="@color/text_gray"
                            android:textSize="13sp" />

                        <!-- Apellido -->
                        <EditText
                            android:id="@+id/lastNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/btn_white_square"
                            android:hint="Apellido"
                            android:inputType="text"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp"
                            android:paddingVertical="14dp"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />

                        <!-- Email -->
                        <EditText
                            android:id="@+id/emailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/btn_white_square"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp"
                            android:paddingVertical="14dp"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />

                        <!-- Contraseña -->
                        <EditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/btn_white_square"
                            android:hint="Contraseña"
                            android:inputType="textPassword"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp"
                            android:paddingVertical="16dp"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />

                        <!-- Confirmar Contraseña -->
                        <EditText
                            android:id="@+id/confirmPasswordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white_square"
                            android:hint="Confirmar Contraseña"
                            android:inputType="textPassword"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp"
                            android:paddingVertical="14dp"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rvw02sl27wq8"
                        android:layout_width="179.72314453125dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Al crear una cuenta, aceptas nuestros\nTérminos de servicio y Política de privacidad."
                        android:textColor="@color/text_light"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Botón Crear Cuenta -->
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:background="@drawable/btn_green_square"
                    android:elevation="6dp"
                    android:paddingVertical="19dp"
                    android:text="CONTINUAR"
                    android:textColor="@color/text_light"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="none" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>