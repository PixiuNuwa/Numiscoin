<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuContainer"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/termsScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00272C">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/r7tflo3z1gb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:layout_marginBottom="47dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="vertical">

                    <!-- Título -->
                    <LinearLayout
                        android:id="@+id/r4wzn4hv2odx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="28dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleTextView"
                            android:layout_width="250dp"
                            android:layout_height="27dp"
                            android:text="Términos del Servicio"
                            android:textColor="@color/text_light"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />
                    </LinearLayout>

                    <!-- Mensaje de bienvenida -->
                    <LinearLayout
                        android:id="@+id/rj1so67w5gk8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rphpcuv9vwo8"
                            android:textColor="@color/text_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="276dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Hola," />

                        <TextView
                            android:id="@+id/ra0uzde3por"
                            android:textColor="@color/text_light"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="312dp"
                            android:text="Antes de crear una cuenta, por favor lee y acepta nuestros Términos y Condiciones." />
                    </LinearLayout>

                    <!-- Términos y condiciones -->
                    <LinearLayout
                        android:id="@+id/ru42luikeoe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rrqbcqcg2bj"
                            android:textColor="@color/text_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="164dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Términos &amp; Condiciones" />

                        <LinearLayout
                            android:id="@+id/r3xk3tdr2f2t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/rhh84fzf7sg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="18dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/termsTextView"
                                    android:textColor="@color/text_light"
                                    android:textSize="9sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="328dp"
                                    android:text="\n1.- Por el hecho de adquirir y usar la presente aplicación, el usuario o cliente acepta desde ya los términos y condiciones que se establecen por el presente documento.\n\n2.- Cualquier dificultad o controversia que no pudiese zanjarse de común acuerdo entre el\nAdministrador y Usuario, deberá ser sometida al conocimiento y fallo de un juez árbitro en\nderecho, quien será designado por la Justicia Ordinaria sometiéndose las partes a la Jurisdicción delos Tribunales de la Corte de Apelaciones de Santiago.\n\n3.- Todas las particularidades, creaciones, formatos, formas, software, etc; son de dominio y propiedad exclusiva de NUMISCOIN, su uso indebido provocará el ejercicio de acciones legales.\n\n4.- La privacidad e información del usuario, son y serán resguardados por NUMISCOIN, del mismo modo el usuario se obliga al debido resguardo del uso y privacidad de sus claves, usuario y preguntas de interés que son efectuadas por el sistema y que sólo pueden ser resueltas y respondidas por el usuario.\n\n5.- Del mismo modo el uso de esta aplicación en el extranjero o fuera del territorio nacional, obliga al usuario a maximizar sus medidas de resguardo, de sus claves y usuario, así como la información que su aplicación contenga y este en uso de un aparato, celular u otro implemento que contenga la aplicación y que pudiese caer en manos de terceros que afectan o puedan afectar los intereses e información del usuario.\n\n6.- Todas las fotografías e información que el usuario suba a la aplicación serán de su\nresponsabilidad y cargo, sea en lo referente al dominio trazabilidad u originalidad del producto coleccionable que sea registrado por el usuario en la aplicación.\n\n7.- Queda absolutamente prohibido al usuario, extender o facilitar la presente aplicación a\nterceros, el hecho de infringir esta disposición faculta a Numiscoin para cerrar su aplicación y el usuario perderá la suma pagada para su uso, sin perjuicio de las acciones legales que Numiscoin podría ejercer por uso, venta o cesión ilegal de la presente aplicación.\n\n8.- El Administrador se reserva el derecho de admisión y cancelación del usuario, ante el evento de constatarse que el usuario utiliza la aplicación para registrar productos ilícitos, sean sustancias ilegales, productos de receptación o delitos diversos, pornografía infantil, actos reñidos contra la moral o buenas costumbre y en general cualquier publicación o registro que atente contra la legislación vigente, ello sin perjuicio de la eventual denuncia que Numiscoin ejercerá a la autoridad competente.\n\n9.- Todo comunicado, aviso o información que se entregue por la aplicación es y será para el uso exclusivo del usuario, cualquier duda que tenga respecto de la misma, su uso o condiciones o términos, será proveídos y contestados desde el correo electrónico ……………………………………..\n\n10.- La presente aplicación no constituye un medio para asegurar, constatar, aseverar ni verificar que los productos o colecciones subidas por el usuario, sean verdaderos, de su dominio o legítimos. Del mismo cualquier incidente o hecho delictual por uso indebido de la información contenida en la aplicación, salvo prueba en contrario, será atribuida al mal uso del usuario de sus claves y registros.\n\n11.- El no pago de la anualidad, autoriza al Administrador para suspender el uso, visualización y utilización de la aplicación, transcurrido 15 días desde el primer aviso de pago, el Administrador bajará la aplicación definitivamente, en todo caso la información estará guardada y reservada ante el evento de que el usuario desee renovar su aplicación, hasta por 1 año, luego de eso la información se perderá, por lo que el usuario deberá siempre mantener los debidos respaldos." />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Checkbox de aceptación -->
                    <LinearLayout
                        android:id="@+id/rm61t624dze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="28dp"
                        android:layout_marginStart="32dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/acceptCheckBox"
                            android:layout_width="20dp"
                            android:layout_height="19dp"
                            android:layout_marginEnd="6dp"
                            android:buttonTint="@color/text_light" />

                        <TextView
                            android:id="@+id/rxjt4imhuyc"
                            android:textColor="@color/text_light"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Estoy de acuerdo con los términos y condiciones." />
                    </LinearLayout>

                    <!-- Botón aceptar -->
                    <Button
                        android:id="@+id/acceptButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_green_square"
                        android:paddingVertical="19dp"
                        android:paddingLeft="132dp"
                        android:layout_marginHorizontal="29dp"
                        android:elevation="6dp"
                        android:text="CONTINUAR"
                        android:textColor="@color/text_light"
                        android:textSize="10sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Mensaje de agradecimiento (oculto inicialmente) -->
        <TextView
            android:id="@+id/thanksTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¡Gracias por aceptar nuestros términos y condiciones!"
            android:textColor="@color/text_green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Contenedor del menú inferior -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>

</RelativeLayout>