<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Contenido igual que antes -->
            <TableRow android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Producido:"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingEnd="8dp"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/tvTotalProducido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:text="No especificado"
                    android:textSize="@dimen/text_size_small"/>
            </TableRow>

        <!--TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Sin Circular:"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingEnd="8dp"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tvValorSinCircular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="No especificado"
                android:textSize="@dimen/text_size_small"/>
        </TableRow-->

        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Comercial:"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingEnd="8dp"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tvValorComercial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="No especificado"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Valor Adquirido:"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingEnd="8dp"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tvValorAdquirido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="No especificado"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
</ScrollView>