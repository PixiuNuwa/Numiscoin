<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r2nh4yxcefx3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rcgezm3m996p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="47dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical">

                <!-- Título Login -->
                <LinearLayout
                    android:id="@+id/rju2bnu3634"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="71dp"
                    android:layout_marginStart="79dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ru95qfl7vxnm"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="19dp"
                        android:src="@drawable/ic_lock"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/app_logo" />

                    <TextView
                        android:id="@+id/rtpqrr7piun"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="ENTRAR" />

                </LinearLayout>

                <!-- Logo -->
                <LinearLayout
                    android:id="@+id/recl6038ewqc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="71dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/r29scd7955ui"
                        android:layout_width="97dp"
                        android:layout_height="93dp"
                        android:src="@drawable/logo_numiscoin"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/app_logo" />

                </LinearLayout>

                <!-- Campo Email/Usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="71dp"
                    android:layout_marginHorizontal="21dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/text_light"
                    app:hintTextColor="@color/text_light"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/text_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email o Nombre de Usuario"
                        android:textColor="@color/text_light"
                        android:textColorHint="@color/text_light"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="76dp"
                    android:layout_marginHorizontal="21dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/text_light"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_light"
                    app:hintTextColor="@color/text_light"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/text_light">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingresa tu contraseña"
                        android:textColor="@color/text_light"
                        android:textColorHint="@color/text_light"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Olvidé contraseña -->
                <LinearLayout
                    android:id="@+id/ricqu5y24zgh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="76dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rtuxdj6t2iy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="31dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/forgotPasswordText"
                            android:textColor="@color/text_light"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="186.3720703125dp"
                            android:gravity="center"
                            android:text="¿Olvidaste tu contraseña? Haz click Aquí"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar -->
                <LinearLayout
                    android:id="@+id/rmz0binyeku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="71dp"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Botón Login - CORREGIDO -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_primary_background"
                    android:text="CONTINUAR"
                    android:textColor="@color/text_light"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="76dp"
                    android:layout_marginHorizontal="32dp"
                    android:paddingVertical="19dp"
                    android:elevation="6dp"
                    android:textAllCaps="false"
                    android:singleLine="true" />

                <!-- Crear cuenta -->
                <LinearLayout
                    android:id="@+id/rw0zl3vjyduh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rokvzjmv5wfh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/createAccountButton"
                            android:textColor="@color/text_light"
                            android:textSize="10sp"
                            android:layout_height="wrap_content"
                            android:layout_width="169.140625dp"
                            android:gravity="center"
                            android:text="¿No tienes una cuenta? Crear cuenta"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>