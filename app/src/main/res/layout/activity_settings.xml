<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Contenido principal con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenu"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Información del usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Foto del usuario -->
                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_white_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto de perfil"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre del usuario -->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Email del usuario -->
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CCCCCC"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Lista de botones de ajustes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1A1A1A"
                android:padding="8dp"
                android:clipToPadding="false">

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Perfil"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/homeButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Inicio"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/faqButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Preguntas Frecuentes"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/contactButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Contacto"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/termsButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Términos del Servicio"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/membershipButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Membresía"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    style="@style/SettingButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/languageButton"
                    style="@style/SettingButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:text="Idioma"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333" />

                <Button
                    android:id="@+id/backupButton"
                    style="@style/SettingButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:text="Descargar copia de seguridad"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior (copiar el mismo de activity_welcome.xml) -->
    <include layout="@layout/bottom_menu" />

</RelativeLayout>