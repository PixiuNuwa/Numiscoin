<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Contenedor del menú inferior -->
    <ScrollView
        android:id="@+id/rz9gvb5uf4h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuContainer"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rp47cjgk81k9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/background_dark"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="36dp"
                android:paddingVertical="18dp">

                <!-- Botón de volver atrás -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Volver"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />

                <LinearLayout
                    android:id="@+id/rnd96i5diy8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Poster del evento -->
                    <ImageView
                        android:id="@+id/eventoPoster"
                        android:layout_width="match_parent"
                        android:layout_height="295dp"
                        android:background="@drawable/lr2701a1a1ad91a1a1a00"
                        android:scaleType="centerCrop" />

                    <!-- Contenedor título y fecha -->
                    <LinearLayout
                        android:id="@+id/rt87xvwxy52s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@color/text_light"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:paddingVertical="12dp"
                        android:paddingLeft="16dp">

                        <!-- Título del evento -->
                        <TextView
                            android:id="@+id/eventoTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="27dp"
                            android:text="Título"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Fecha del evento -->
                        <TextView
                            android:id="@+id/eventoFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dd/mm/aa"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Contenedor descripciones -->
                    <LinearLayout
                        android:id="@+id/rvdogap5mhtq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">

                        <!-- Breve descripción -->
                        <TextView
                            android:id="@+id/eventoBreveDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="16dp"
                            android:text="Título"
                            android:textColor="@color/text_light"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Descripción completa -->
                        <TextView
                            android:id="@+id/eventoDescripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..."
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>
</LinearLayout>