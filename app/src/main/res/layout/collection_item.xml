<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/btn_white_square"
        android:gravity="center_vertical">

        <!-- Información de la colección (a la izquierda) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvCollectionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Colección"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_s"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCollectionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción de la colección"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_xs" />

        </LinearLayout>

        <!-- Botones de acción con íconos (a la derecha) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botón Editar con ícono -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_green_square"
                android:src="@android:drawable/ic_menu_edit"
                android:scaleType="center"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:contentDescription="Editar colección" />

            <!-- Botón Eliminar con ícono -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_red_square"
                android:src="@android:drawable/ic_menu_delete"
                android:scaleType="center"
                android:padding="8dp"
                android:contentDescription="Eliminar colección" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>