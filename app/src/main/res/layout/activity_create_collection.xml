<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/rvusqje5m3va"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuContainer"
        android:background="@color/background_dark"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título CREAR MONEDA -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Volver"
                    app:tint="@color/text_light" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Crear Coleccion"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_xxl"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r5djndv9zyrt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="100dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/rhjturjrrk3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="32dp"
                    android:layout_marginBottom="155dp"
                    android:orientation="vertical">

                    <!--TextView
                        android:id="@+id/r3e6py2iq9l9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:gravity="center"
                        android:text="Crear Colección"
                        android:textColor="@color/text_light"
                        android:textSize="20sp"
                        android:textStyle="bold" /-->

                    <LinearLayout
                        android:id="@+id/r90bnav5k8y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginHorizontal="27dp"
                        android:orientation="vertical">

                        <EditText
                            android:inputType="text"
                            android:hint="Nombre"
                            android:id="@+id/etNombre"
                            android:textColor="@color/text_gray"
                            android:textColorHint="@color/text_gray"
                            android:textSize="13sp"
                            android:layout_marginBottom="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white_square"
                            android:paddingVertical="11dp"
                            android:paddingLeft="21dp"
                            android:paddingRight="42dp" />

                        <LinearLayout
                            android:id="@+id/rcirlbkg737"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_white_square"
                            android:paddingTop="22dp"
                            android:paddingBottom="114dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etDescripcion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_marginEnd="14dp"
                                android:hint="Descripción"
                                android:textColor="@color/text_gray"
                                android:textColorHint="@color/text_gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rtu047drftt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/r5bjzk5knyl4"
                            android:textColor="@color/text_light"
                            android:textSize="9sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Una vez creada tu colección la podrás ver en el listado de colecciones." />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rvve1v14gvne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="5dp"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="21dp"
                    android:elevation="6dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCrear"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Crear "
                        android:background="@android:color/transparent"
                        android:textColor="@color/text_light" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Menu -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00272C"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>
</RelativeLayout>