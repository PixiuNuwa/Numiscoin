<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Header Superior -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_dark"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_alignParentTop="true">

        <!-- Información del usuario a la izquierda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido!"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E2E8F0"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botones a la derecha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Foto de perfil redonda en lugar del engranaje -->
            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto de perfil"
                    android:src="@drawable/ic_profile" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomMenuContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Tarjeta de Estadísticas de Colección -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/btn_green_square">

                    <!-- Columna 1: Total Colección -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalColeccionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Valor Comercial"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalColeccionValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1.187.40"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Columna 2: Items (círculo verde) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Círculo verde con número -->
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/btn_green_circle"
                            android:gravity="center"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/totalItemsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:textColor="@color/text_white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <!-- Columna 3: Total Gastado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/totalGastadoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Valor Adquirido"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/totalGastadoValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1.187.40"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Sección de Próximos Eventos con fondo verde claro y esquinas redondeadas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_green_square"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Próximos Eventos"
                    android:textColor="@color/text_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- RecyclerView horizontal para eventos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/eventosRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false" />

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0"
                    android:layout_marginVertical="16dp" />

                <!-- Sección de Objetos Recientes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetos Recientes"
                    android:textColor="@color/text_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- RecyclerView de objetos recientes (ya lo tienes) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/objetosRecientesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false" />

            </LinearLayout>

            <!-- Botón de Cerrar Sesión -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cerrar Sesión"
                    android:textColor="#DC2626"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:stateListAnimator="@null" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Menu -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>

</RelativeLayout>