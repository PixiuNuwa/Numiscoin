<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Botón de avatar en esquina superior derecha -->
    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_white_background"
        android:scaleType="centerCrop"
        android:contentDescription="Perfil de usuario"
        android:elevation="8dp" />

    <!-- Contenido principal con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenu"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mensaje de bienvenida -->
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido!"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Sección de Calendario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calendario de Eventos - Mes Actual"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- GridView para el calendario -->
            <GridView
                android:id="@+id/calendarGridView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:numColumns="7"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="1dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="32dp" />

            <!-- Sección de Galería de Eventos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próximos Eventos"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- GridView para posters de eventos -->
            <GridView
                android:id="@+id/eventosGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="12dp"
                android:horizontalSpacing="12dp"
                android:gravity="center" />

            <!-- Botón de cerrar sesión -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cerrar Sesión"
                android:textColor="#FFFFFF"
                android:background="#0000FF"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Menú inferior (mantener igual) -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#2D3330"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:weightSum="5">

        <!-- Botón 1: Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:id="@+id/menuHome"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_selected"
                android:tint="#FFF3D6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="#FFF3D6"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 2: Calculadora -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:id="@+id/menuCalculator"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calculator"
                android:tint="#ABA693" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Calculadora"
                android:textColor="#ABA693"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 3: Mi Coleccion -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:id="@+id/menuCollection"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_collection"
                android:tint="#ABA693" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Colección"
                android:textColor="#ABA693"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 4: Divisas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:id="@+id/menuCurrency"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_currency"
                android:tint="#ABA693" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Divisas"
                android:textColor="#ABA693"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 5: Market Place -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:id="@+id/menuMarketplace"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_marketplace"
                android:tint="#ABA693" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="MarketPlace"
                android:textColor="#ABA693"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>