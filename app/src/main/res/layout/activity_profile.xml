<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Botón de regreso como ImageButton -->
    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:contentDescription="Volver"
        app:tint="@android:color/white" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <LinearLayout
                android:id="@+id/rqa39u52ivpd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="81dp"
                android:layout_marginStart="110dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1ack0cyqf64"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="19dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/r2e61oizjyj3"
                    android:textColor="@color/text_light"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="AJUSTES"
                    />
            </LinearLayout>

            <!-- Contenedor del avatar -->
            <LinearLayout
                android:id="@+id/avatarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/avatarWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">
                        <!-- Avatar del perfil -->
                        <ImageView
                            android:id="@+id/profileAvatar"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nameContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <!-- Nombre del perfil -->
                        <TextView
                            android:id="@+id/profileFullName"
                            android:textColor="@color/text_light"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Guido Rojas" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Información del usuario - Mismo ancho para todos los TextView -->
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/infoBackground"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr20"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/profileName"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/btn_white_square"
                        android:paddingVertical="12dp"
                        android:text="ID: 12345" />


                    <TextView
                        android:id="@+id/profileLastName"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/btn_white_square"
                        android:paddingVertical="12dp"
                        android:text="Miembro desde: 2024" />

                    <TextView
                        android:id="@+id/profileEmail"
                        android:textColor="@color/text_dark"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/btn_white_square"
                        android:paddingVertical="12dp"
                        android:text="usuario@email.com" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botones - Más angostos pero con texto ajustado -->
            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Botón Editar - Texto más pequeño y menos padding -->
                <Button
                    android:id="@+id/editButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:elevation="6dp"
                    android:text="EDITAR DATOS"
                    android:textColor="@color/text_light"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    style="?android:attr/borderlessButtonStyle" />

                <!-- Botón Ayuda - Texto más pequeño y menos padding -->
                <Button
                    android:id="@+id/helpButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:elevation="6dp"
                    android:layout_marginTop="12dp"
                    android:text="AYUDA"
                    android:textColor="@color/text_light"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    style="?android:attr/borderlessButtonStyle" />
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:elevation="6dp"
                    android:layout_marginTop="12dp"
                    android:text="VOLVER"
                    android:textColor="@color/text_light"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>