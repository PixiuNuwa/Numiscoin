<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rtn1n3m6ijpr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_dark"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rz7oui7gy05r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="126dp"
                android:layout_marginHorizontal="41dp"
                android:orientation="vertical">

                <!-- Header - Convertido a LinearLayout horizontal como en el funcional -->
                <LinearLayout
                    android:id="@+id/reoem1bc6xtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="71dp"
                    android:layout_marginHorizontal="49dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="11dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="@string/cd_back_arrow"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/r129zhrdch7"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/reset_password_title" />
                </LinearLayout>

                <!-- Logo -->
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="97dp"
                    android:layout_height="93dp"
                    android:layout_marginBottom="71dp"
                    android:src="@drawable/logo_placeholder"
                    android:contentDescription="@string/cd_logo"
                    android:scaleType="fitXY" />

                <!-- Container de información - equivalente al bg_auth_container -->
                <LinearLayout
                    android:id="@+id/rsq5wkw2gc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/btn_green_square"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="27dp"
                    android:layout_marginBottom="71dp"
                    android:orientation="vertical">

                    <!-- Título y descripción - Reducido padding y ajustado al inicio -->
                    <LinearLayout
                        android:id="@+id/r6e9ciuz0sl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="39dp"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/rj9t68rv3pkq"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="14dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="start"
                            android:text="Olvide la contraseña"
                            android:singleLine="true" />

                        <LinearLayout
                            android:id="@+id/r57dy7l63zln"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/r8drfc0dxjz6"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:gravity="start"
                                android:lineSpacingExtra="2sp"
                                android:text="Ingrese el correo asociado a su cuenta. Enviaremos un email con un código para restablecer su contraseña." />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Input Email -->
                    <EditText
                        android:id="@+id/emailEditText"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_gray"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rounded_forced"
                        android:paddingVertical="14dp"
                        android:paddingLeft="21dp"
                        android:paddingRight="42dp" />
                </LinearLayout>

                <!-- Botón Continuar - Convertido a Button -->
                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_primary"
                    android:textColor="@color/button_text"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingVertical="19dp"
                    android:layout_marginHorizontal="21dp"
                    android:elevation="6dp"
                    android:text="Continuar" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>