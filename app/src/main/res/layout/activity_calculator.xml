<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Contenido principal de la calculadora -->
    <LinearLayout
        android:id="@+id/calculatorContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@+id/bottomMenu"
        android:layout_alignParentTop="true">

        <!-- Display de la calculadora -->
        <TextView
            android:id="@+id/calculatorDisplay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#2C2C2C"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:gravity="end|center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Fila 1: Funciones especiales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnE"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="e"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp"
                android:onClick="@{(v) -> }"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnToggleMode"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="DEG"
                android:textSize="14sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnSin"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="14sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnBackspace"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="⌫"
                android:textSize="18sp"
                android:background="#FF5722"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Fila 2: Operadores básicos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="18sp"
                android:background="#FF5722"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnParenthesis"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="()"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="×"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Fila 3: Números 7-9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Fila 4: Números 4-6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="18sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Fila 5: Números 1-3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="18sp"
                android:background="#2196F3"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Fila 6: Número 0 y decimal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:text="0"
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="18sp"
                android:background="#2C2C2C"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="14sp"
                android:background="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Menú inferior (MISMO que las otras actividades) -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:weightSum="5">

        <!-- Botón 1: Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:id="@+id/menuHome"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="#888888"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 2: Calculadora -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:id="@+id/menuCalculator"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧮"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Calculadora"
                android:textColor="#FF0000FF"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 3: Mi Colección -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:id="@+id/menuCollection"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📓"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mi Colección"
                android:textColor="#888888"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 4: Divisas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:id="@+id/menuCurrency"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💲"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Divisas"
                android:textColor="#888888"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Botón 5: Marketplace -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:id="@+id/menuMarketplace"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛒"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Marketplace"
                android:textColor="#888888"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>