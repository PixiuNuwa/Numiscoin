<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="11dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

        <TextView
            android:textColor="@color/title_text_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="CALCULADORA" />
    </LinearLayout>

    <!-- Display de la calculadora -->
    <LinearLayout
        android:id="@+id/displayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:gravity="end"
        android:padding="20dp">

        <TextView
            android:id="@+id/display"
            android:textColor="@color/title_text_light"
            android:textSize="48sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:gravity="end"
            android:text="0"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/displayContainer"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="#01B76A" />

    <!-- Teclado de la calculadora - USANDO LINEARLAYOUT ANIDADO -->
    <LinearLayout
        android:id="@+id/calculatorKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayContainer"
        android:layout_above="@+id/bottomMenuContainer"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/button_special1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="±"
                android:textColor="@color/boton_rojo"
                android:textSize="24sp"
                android:background="@drawable/btn_red_square" />

            <TextView
                android:id="@+id/C"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/boton_rojo"
                android:textSize="24sp"
                android:background="@drawable/btn_red_square" />

            <TextView
                android:id="@+id/division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/erase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="⌫"
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />
        </LinearLayout>

        <!-- Fila 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/multiplication"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="×"
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />
        </LinearLayout>

        <!-- Fila 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/subtraction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />
        </LinearLayout>

        <!-- Fila 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/addition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />
        </LinearLayout>

        <!-- Fila 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/boton_numero"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/decimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="."
                android:textColor="@color/boton_operaciones"
                android:textSize="24sp"
                android:background="@drawable/btn_darkgreen_green_square" />

            <TextView
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="="
                android:textColor="@color/boton_igual"
                android:textSize="24sp"
                android:background="@drawable/btn_green_square" />
        </LinearLayout>

    </LinearLayout>

    <!-- Contenedor del menú inferior -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>

</RelativeLayout>