<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002c2b"
    android:padding="30dp">

    <!-- Display para mostrar resultados -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#002c2b"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:gravity="end|center_vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>

    <!-- Frame principal - keyboard_calc -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_calc"
        android:layout_width="370dp"
        android:layout_height="464dp"
        android:background="#002c2b"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Component Frame_11 -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/Frame_11"
            android:layout_width="360.97dp"
            android:layout_height="425dp"
            app:columnCount="4"
            app:columnOrderPreserved="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rowCount="5">

            <!-- Fila 1 -->
            <!-- erase -->
            <Button
                android:id="@+id/erase"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_erase_background"
                android:text="⌫"
                android:textColor="#343434"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_row="0"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- C -->
            <Button
                android:id="@+id/C"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_c_background"
                android:text="C"
                android:textColor="#343434"
                android:textSize="36sp"
                app:layout_column="1"
                app:layout_row="0"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- % -->
            <Button
                android:id="@+id/percent"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_operator_background"
                android:text="%"
                android:textColor="#01b76a"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_row="0"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- ÷ -->
            <Button
                android:id="@+id/division"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_operator_background"
                android:text="÷"
                android:textColor="#01b76a"
                android:textSize="36sp"
                app:layout_column="3"
                app:layout_row="0"
                android:layout_marginBottom="11dp"/>

            <!-- Fila 2 -->
            <!-- 7 -->
            <Button
                android:id="@+id/button_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="0"
                app:layout_row="1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 8 -->
            <Button
                android:id="@+id/button_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="1"
                app:layout_row="1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 9 -->
            <Button
                android:id="@+id/button_9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="2"
                app:layout_row="1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- × -->
            <Button
                android:id="@+id/multiplication"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_operator_background"
                android:text="×"
                android:textColor="#01b76a"
                android:textSize="36sp"
                app:layout_column="3"
                app:layout_row="1"
                android:layout_marginBottom="11dp"/>

            <!-- Fila 3 -->
            <!-- 4 -->
            <Button
                android:id="@+id/button_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="0"
                app:layout_row="2"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 5 -->
            <Button
                android:id="@+id/button_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="1"
                app:layout_row="2"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 6 -->
            <Button
                android:id="@+id/button_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="2"
                app:layout_row="2"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- - -->
            <Button
                android:id="@+id/subtraction"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_operator_background"
                android:text="-"
                android:textColor="#01b76a"
                android:textSize="36sp"
                app:layout_column="3"
                app:layout_row="2"
                android:layout_marginBottom="11dp"/>

            <!-- Fila 4 -->
            <!-- 1 -->
            <Button
                android:id="@+id/button_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="0"
                app:layout_row="3"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 2 -->
            <Button
                android:id="@+id/button_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="1"
                app:layout_row="3"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- 3 -->
            <Button
                android:id="@+id/button_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="2"
                app:layout_row="3"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="11dp"/>

            <!-- + -->
            <Button
                android:id="@+id/addition"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_operator_background"
                android:text="+"
                android:textColor="#01b76a"
                android:textSize="36sp"
                app:layout_column="3"
                app:layout_row="3"
                android:layout_marginBottom="11dp"/>

            <!-- Fila 5 -->
            <!-- 0 -->
            <Button
                android:id="@+id/button_0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="0"
                app:layout_row="4"
                android:layout_marginEnd="10dp"/>

            <!-- . -->
            <Button
                android:id="@+id/decimal"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/button_number_background"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="36sp"
                app:layout_column="1"
                app:layout_row="4"
                android:layout_marginEnd="10dp"
                tools:ignore="MissingClass" />

            <!-- = -->
            <Button
                android:id="@+id/equals"
                android:layout_width="170dp"
                android:layout_height="75dp"
                android:background="@drawable/button_equals_background"
                android:text="="
                android:textColor="#343434"
                android:textSize="36sp"
                app:layout_column="2"
                app:layout_row="4"
                app:layout_columnSpan="2"/>

        </androidx.gridlayout.widget.GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú inferior -->
    <include layout="@layout/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>