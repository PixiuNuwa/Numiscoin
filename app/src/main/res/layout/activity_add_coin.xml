<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuContainer"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Nueva Moneda"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Campos obligatorios -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre (moneda) *"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />
			
		<EditText
			android:id="@+id/etDescripcion"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Descripción"
			android:textColor="@android:color/white"
			android:textColorHint="#AAAAAA"
			android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etAnio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Año *"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="16dp" />

        <!-- Campos de información básica -->
        <!--EditText
            android:id="@+id/etFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Familia"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" /-->

        <!--EditText
            android:id="@+id/etIdFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Familia"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" /-->

        <EditText
            android:id="@+id/etVariante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Variante"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCeca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ceca"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDisenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Grabador"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <!-- Campos de valores -->
        <EditText
            android:id="@+id/etTotalProducido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Producido"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <!--EditText
            android:id="@+id/etValorSinCircular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor Sin Circular"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" /-->

        <EditText
            android:id="@+id/etValorComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor Comercial"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etValorAdquirido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor Adquirido"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <!-- Estado y observaciones -->
        <EditText
            android:id="@+id/etEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etObservaciones"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Observaciones"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <!-- Campos adicionales -->
        <!--EditText
            android:id="@+id/etOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Orden"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="8dp" /-->

        <!--EditText
            android:id="@+id/etAcunada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acuñada"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="24dp" /-->

        <!-- Sección de foto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotos de la moneda"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Foto 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#333333"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGaleria1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Galería 1"
                    android:textColor="@android:color/white"
                    android:background="#FF0000FF"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnCamara1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cámara 1"
                    android:textColor="@android:color/white"
                    android:background="#FFFF0000"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Foto 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivFoto2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#333333"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGaleria2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Galería 2"
                    android:textColor="@android:color/white"
                    android:background="#FF0000FF"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnCamara2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cámara 2"
                    android:textColor="@android:color/white"
                    android:background="#FFFF0000"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Foto 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivFoto3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#333333"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGaleria3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Galería 3"
                    android:textColor="@android:color/white"
                    android:background="#FF0000FF"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnCamara3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cámara 3"
                    android:textColor="@android:color/white"
                    android:background="#FFFF0000"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Foto 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivFoto4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#333333"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnGaleria4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Galería 4"
                    android:textColor="@android:color/white"
                    android:background="#FF0000FF"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnCamara4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Cámara 4"
                    android:textColor="@android:color/white"
                    android:background="#FFFF0000"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar Moneda"
            android:textColor="@android:color/white"
            android:background="#FF00FF00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Campos obligatorios"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    </ScrollView>
    <!-- Bottom Navigation Menu -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>
</RelativeLayout>