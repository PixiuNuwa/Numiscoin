<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">


    <!-- Título -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:tint="@color/text_light" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Preguntas Frecuentes"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_xxl"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ExpandableListView - OCUPA LA MAYOR PARTE DE LA PANTALLA -->
    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomSection"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:groupIndicator="@android:color/transparent"
        android:childDivider="@android:color/transparent"
        android:padding="16dp" />

    <!-- Sección inferior -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomMenuContainer"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:textColor="@color/text_light"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Estamos aquí para ayudarte. ¿Aún tienes dudas?, Escríbenos."
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_square"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:elevation="6dp">

            <TextView
                android:textColor="@color/text_light"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="CONTÁCTANOS" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Menu -->
    <LinearLayout
        android:id="@+id/bottomMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_dark"
        android:paddingVertical="8dp">

        <include layout="@layout/bottom_menu" />

    </LinearLayout>

</RelativeLayout>